<% provide(:title, "新建话题") %>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">

    <div class="panel-body">
      <%= form_for :topic, url: topics_path do |f| %>
        <div class="form-group topic-title">
          <input type="text" class="form-control" id="title" name='topic[title]' placeholder="话题标题">
        </div>

        <div class="form-group topic-content">
          <textarea class="form-control" rows="20" name='topic[content]' placeholder="话题内容，请使用markdown编辑"></textarea>
        </div>

        <div class="row">
          <div class="col-sm-3">
            <input type='submit' name='commit' value="保存" class="btn btn-primary btn-lg btn-block">
          </div>
          <div class="col-sm-2">
            <a href="/topics" class="btn btn-default btn-lg btn-block" role="button">取消</a>
          </div>
        </div>
      <% end %>

    </div>
  <div class="col-md-2"></div>
</div>