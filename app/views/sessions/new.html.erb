<% provide(:title, "登录") %>

<div class="row margin-top-100">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="panel panel-default" id="login">
      <div class="panel-heading">登录</div>
      <div class="panel-body">
        <%= form_tag("/login", id: "login", remote: true) do |f| %>
          <div class="form-group">
            <input type="text" class="form-control input-lg" name="session[email]" placeholder="登录邮箱">
          </div>
          <div class="form-group">
            <input type="password" class="form-control input-lg" name="session[password]" placeholder="密码">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">登录</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>