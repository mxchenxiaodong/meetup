<% provide(:title, "注册") %>

<div class="row margin-top-100">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="panel panel-default" id="new_user">
      <div class="panel-heading">注册新用户</div>
      <div class="panel-body">

        <%= form_tag("/users", id: "signup", remote: true) do |f| %>
          <div class="form-group">
            <input type="text" class="form-control input-lg" name="user[name]" placeholder="用户名">
          </div>

          <div class="form-group">
            <input type="email" class="form-control input-lg" name="user[email]" placeholder="登录邮箱">
          </div>
          <div class="form-group">
            <input type="password" class="form-control input-lg" name="user[password]" placeholder="密码">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg">提交注册</button>
             /
            <a class="btn btn-success" href="/login">登录</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>